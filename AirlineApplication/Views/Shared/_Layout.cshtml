<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="https://kit.fontawesome.com/b6e758753c.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css?family=Carrois+Gothic|DM+Sans|Share&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-fixed-top navbar-light">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("About us", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Flights</a>
                        <ul class="dropdown-menu">
                            @if (User.IsInRole("Admin"))
                            {
                                <li>@Html.ActionLink("Create a Flight", "CreateFlight", "Flights")</li>
                            }
                            <li>@Html.ActionLink("Show Flights", "ShowFlights", "Flights")</li>
                        </ul>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Crew Members</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Show crew members", "ShowMembers", "CrewMembers")</li>
                                <li>@Html.ActionLink("Add a crew member", "CreateMember", "CrewMembers")</li>
                            </ul>
                        </li>
                    }
                    @if (User.IsInRole("Admin") || User.IsInRole("Dispatcher"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Crews</a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Show crews", "ShowCrews", "Dispatcher")</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>
    <footer>
        <div id="icons" class="row">
            <a class=" col-xs-2 fb-ic">
                <i class="fab fa-facebook-f fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
            </a>
            <a class="col-xs-2 tw-ic">
                <i class="fab fa-twitter fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
            </a>
            <a class=" col-xs-2 gplus-ic">
                <i class="fab fa-google-plus-g fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
            </a>
            <a class="col-xs-2 ins-ic">
                <i class="fab fa-instagram fa-lg white-text mr-md-5 mr-3 fa-2x"> </i>
            </a>
            <a class="col-xs-2 pin-ic">
                <i class="fab fa-pinterest fa-sm white-text fa-2x"> </i>
            </a>
        </div>
        <div class="footer-copyright text-center py-3">
                @Html.ActionLink("MyAirline.com", "Index", "Home",new { @class = "glyphicon glyphicon-home" })
        </div>
    </footer>

    @*references to bundles*@
    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)

    @*markup script for notifications popup*@
    <script type="text/x-template" id="notifications-template">
        <ul>
            <%
            _.each(notifications, function(notification){
            if(notification.type == 1) { %>
            <li><%= notification.user.email%>  sent a notiification : <%=notification.description%> at <%= notification.dateTime%>. </li>
            <%}
            })
            %>
        </ul>
    </script>
    <script>
        $(document).ready(function () {
            $.getJSON("/api/notifications", function (notifications) {
                $(".js-notifications-count")
                    .text(notifications.length)
                    .removeClass("hide")
                    .addClass("animated bounceInDown");

                $(".notifications").popover({
                    html: true,
                    title: "Notifications",
                    content: function () {
                        var compiled = _.template($("#notifications-template").html());
                        return compiled({ notifications: notifications });
                    },
                    placement: "bottom",
                });
            });

        });
    </script>
</body>
</html>
